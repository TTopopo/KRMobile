<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KRMobil"
        tools:targetApi="31">

        <!-- Основная активность -->
        <activity
            android:name=".register.RegActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Активность авторизации -->
        <activity
            android:name=".register.AuthActivity"
            android:exported="false" />

        <!-- Активность каталога -->
        <activity
            android:name=".products.CatalogActivity"
            android:exported="false" />

        <!-- Активность списка инструментов -->
        <activity
            android:name=".products.ToolListActivity"
            android:exported="false" />

        <!-- Активность списка материалов -->
        <activity
            android:name=".products.MaterialListActivity"
            android:exported="false" />

        <!-- Активность редактирования инструмента -->
        <activity
            android:name=".register.EditToolActivity"
            android:exported="false" />

        <!-- Активность редактирования материала -->
        <activity
            android:name=".register.EditMaterialActivity"
            android:exported="false" />

        <!-- Активность добавления инструмента -->
        <activity
            android:name=".register.AddToolActivity"
            android:exported="false" />

        <!-- Активность добавления материала -->
        <activity
            android:name=".register.AddMaterialActivity"
            android:exported="false" />

        <!-- Активность профиля -->
        <activity
            android:name=".register.ProfileActivity"
            android:exported="false" />

        <!-- Активность корзины -->
        <activity
            android:name=".register.ShoppingCartActivity"
            android:exported="false" />

        <!-- Активность администратора для продаж -->
        <activity
            android:name=".register.AdminSaleActivity"
            android:exported="false" />

        <!-- Активность администратора для пользователей -->
        <activity
            android:name=".register.AdminUserActivity"
            android:exported="false" />
    </application>

</manifest>
